extends layout

block content

  h1.page_heading Add New User

  form(method="POST", class="new-user-form" , action="/users")
   p Id:
     input#id(type="text" , name="id")
   p Name:
     input#name(type="text" , name="name")
   p Role:
     select#chooselang(name='role')
       option(value='admin') Admin
       option(value='manager') Manager
       option(value='patient', selected='') Patient
 
   p: button(type="submit") Add New User
